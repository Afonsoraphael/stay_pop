                <main class="desconto">
                    <form class="cupom">
                        <h1>Use seu cupom aqui!</h1>
                        <div class="cupom-desconto">
                            <label for="cupom"></label>
                            <input type="number" nome="number" id="number"
                                placeholder="Insira seu cupom">
                            <button type="submit" form="desconto">Utilizar</button>
                        </div>
                    </form>
                </main>

                <section class="extrato">
                    <h1> Descrição de seu carrinho! </h1>
                    <article class="linha">
                        <img src="./img/Line 27.png" alt="">
                    </article>
                    <div class="quantidade">
                        <p> X produtos </p>
                        <span> R$ 000,00</span>
                    </div>

                    <div class="frete">
                        <p> Frete </p>
                        <span> R$ 00,00</span>
                    </div>
                    <article class="linha1">
                        <img src="./img/Line 28.png" alt="">
                    </article>
                    <div class="total">
                        <p> Total </p>
                        <span> R$ 00,00 </span>
                    </div>
                </section>

                <div class="finalizar">
                    <form action="/usuario/carrinho/finalizar">
                        <button type="submit"> Finalizar compra </button>
                    </form>
                </div>


