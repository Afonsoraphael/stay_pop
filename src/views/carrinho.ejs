    <body>
            <%- include('./header.ejs') %>

            <section class="titulo-secao">
                <h1>MEU CARRINHO</h1>
                <span class="material-symbols-outlined">
                    shopping_cart_checkout
                </span>
            </section>
            <% products.forEach((product) => { %>
                <div class="div">
                    <img class="img" img src=<%= product.img  %> alt="">
                    <div class="txt">
                        <p class=""> <%= product.name %> </p>
                        <span class="txt1"><%= product.description %></span>
                    </div>
                </div>
            <% }) %>

            <div class="input-wrapper">
                <p>Quantidade</p>
                <label for="quantidade"></label>
                <select name="quantidade" id="quantidade">
                    <option selected disabled> 0 </option>
                    <option value="1"> 1 </option>
                    <option value="2"> 2 </option>
                    <option value="3"> 3 </option>
                    <option value="1"> 4 </option>
                    <option value="1"> 5 </option>
                    <option value="1"> 6 </option>
                </select>
            </div>

            <section class="carrossel">
                <h2>Aproveite também!</h2>
                <% productsInDb.forEach((product) => { %>
                <div>
                    <article class="rolar">
                        <img src=<%= product.img %> style="width: 100px; height: 100px ">
                    </article>
                        <article class="card-products">
                            <img src="./img/moletom-estampa.jpg" alt="">
                            <h1><%= product.name %></h1>
                            <p><%= product.description %></p>
                            <span><%= product.price %></span>
                        </article>
                    </div>
                    <% }) %>

